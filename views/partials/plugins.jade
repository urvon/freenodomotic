div(ng-controller="PluginController")    
    ul.list-group
        li.list-group-item(ng-repeat="data in datas") {{data.name}}
            .btn-group.button-right            
                button(type="button", class="btn btn-success", ng-disabled="data.isRunning")
                    span(class="glyphicon glyphicon-play") Play
                button(type="button", class="btn btn-danger", ng-disabled="!data.isRunning")
                    span(class="glyphicon glyphicon-stop") Stop


    